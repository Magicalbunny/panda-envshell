{{INSTALL_DIR_LOG_BIN}}/*.log {
    daily
    rotate 10
    create 0664 {{ENV_USER}} {{ENV_GROUP}}
    missingok
    notifempty
    compress
    delaycompress
    postrotate
        /bin/kill -USR1 $(cat {{INSTALL_FILE_BIN_PID}} 2>/dev/null) 2>/dev/null || :
        /sbin/start-stop-daemon --stop --signal USR1 --quiet --pidfile {{INSTALL_FILE_BIN_PID}} --name nginx
    endscript
    sharedscripts
}