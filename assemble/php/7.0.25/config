BIN_FULL_NAME='php-7.0.25'
BIN_DOWNLOAD_URL='http://cn2.php.net/distributions/'$BIN_FULL_NAME'.tar.gz'
BIN_CODE_TAR=$BIN_FULL_NAME'.tar.gz'
BIN_CODE_DIR='/'$BIN_FULL_NAME

BIN_COMMON_LIB='libxml2-dev libmcrypt-dev libssl-dev libcurl4-openssl-dev libpng16-dev libwebp-dev'

INSTALL_DIR_BIN_BIN=$INSTALL_DIR_BIN'/'$BIN_FULL_NAME
INSTALL_DIR_LOG_BIN=$INSTALL_DIR_LOG'/php-fpm'
INSTALL_FILE_BIN_PID=$INSTALL_DIR_BIN_BIN'/php-fpm.pid'

BIN_CONFIGURE_VARS='INSTALL_DIR_BIN_BIN INSTALL_DIR_LOG_BIN INSTALL_FILE_BIN_PID'